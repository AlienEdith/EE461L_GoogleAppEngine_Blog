  	<!-- Maps the servlets to the URL paths -->
  	
  	<!-- List All Posts -->
   	<servlet-mapping>
  		<servlet-name>posts</servlet-name>
  		<url-pattern>/posts</url-pattern>
  	</servlet-mapping>
  

  
  	<!-- Create New Post -->
	<servlet-mapping>
		<servlet-name>newPost</servlet-name>
        <url-pattern>/posts</url-pattern>
	</servlet-mapping> 